<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="80dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/info_user_row_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_info_contacts"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/info_user_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/info_user_row_image"
        tools:text="LastName, FirstName"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tag_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/info_user_row_image"
        android:layout_below="@id/info_user_row_name"
        android:text="Codigo: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tag_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/info_user_row_image"
        android:layout_below="@id/tag_code"
        android:text="Correo: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/info_user_row_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Codigo de alumno"
        android:layout_toEndOf="@id/tag_code"
        android:layout_below="@id/info_user_row_name"/>

    <TextView
        android:id="@+id/info_user_row_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Email"
        android:layout_toEndOf="@id/tag_email"
        android:layout_below="@id/info_user_row_code"/>

</RelativeLayout>